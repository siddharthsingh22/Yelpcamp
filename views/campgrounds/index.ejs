<%- include("../partials/header", {loggedIn : true}) %>
<div class="container" style="margin-top: 10px;">
	<header class="jumbotron">
		<div class="container" style="text-align: center;">
			<h1>Welcome To YelpCamp!</h1>
			<p class="mt-3">View our hand-picked campgrounds from all over the world</p>
			<p>
				<a class="btn btn-info btn-large mt-3" href="/campgrounds/new">Add New Campground</a>
			</p>
		</div>
	</header>

	<div class="row text-center" style="display: flex; flex-wrap: wrap;">
		<% campgroundsArray.forEach(function(campground){ %>
		<div class="col-md-3 col-sm-4 mb-2">
			<div class="card">
				<img class="card-img-top rounded" src="<%= campground.src %>" style="width: 100%; height: 180px;" />
				<div class="card-body">
					<h5 class="card-text" style="opacity: 1;"><%= campground.name %></h5>
				</div>
				<a href="/campgrounds/<%= campground._id %>" class="btn btn-success btn-sm ml-3 mr-3 mb-3">More Info</a>
			</div>
		</div>
		<% }); %>
	</div>
</div>
<%- include("../partials/footer") %>
