<%- include("../partials/header", {loggedIn : true}) %>
<div class="container" style="margin-top: 20px;">
	<div class="row">
		<div class="col-md-3">
			<h5 class="mb-4 display-4" style="font-size: 30px;">Yelp Camp</h5>
			<div class="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
			<a href="/campgrounds" class="btn btn-secondary btn-block mt-3">Go Back</a>
		</div>
		<div class="col-md-9">
			<div class="card">
				<img class="card-img-top rounded" src="<%= matchedCampgroundFromDb.src %>" style="width: 100%; height: 500px;" />
				<div class="card-body" style="background-color: #e9ecef;">
					<div style="display: flex; justify-content: space-between; align-items: center;">
						<h4 class="card-text text-info" style="font-weight: 400;"><%= matchedCampgroundFromDb.name %></h4>
						<h4 class="card-text" style="font-weight: 400;">5999/night</h4>
					</div>
					<p class="card-text"><%= matchedCampgroundFromDb["desc"] %></p>
				</div>
			</div>
			<div style="background-color: #e9ecef;" class="mt-3">
				<div class="text-right">
					<a href="/campgrounds/<%= matchedCampgroundFromDb._id %>/comments/new" class="btn btn-success btn-sm m-3">Leave a review</a>
				</div>
				<div class="row ml-5 mt-3 mb-3 mr-2">
					<% matchedCampgroundFromDb["comments"].forEach((eachComment) => { %>
					<div class="col-md-12 pl-0" style="display: flex; justify-content: space-between;">
						<strong><p class="card-text"><%= eachComment["author"] %></p></strong>
						<p>10 Days Ago</p>
					</div>
					<div class="col-md-12 pl-0 mb-3">
						<p class="card-text"><%= eachComment["content"] %></p>
					</div>
					<% }) %>
				</div>
			</div>
		</div>
	</div>
</div>
<%- include("../partials/footer") %>
