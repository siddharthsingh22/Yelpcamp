<%- include("./partials/header", {loggedIn : false}) %>

<div class="container">
	<div class="row" style="display: flex; flex-direction: column; align-items: center; margin-top: 80px;">
		<div class="col-sm-8 col-md-4 pr-4 pl-4 pb-4 pt-2" style="border: 1px solid rgba(0, 0, 0, 0.1); background-color: #e4e4e4;">
			<h1 class="display-4 mb-4 text-center">Change Password</h1>
			<% if(error){ %>
			<div class="alert alert-danger mt-3 text-center" role="alert">
				<%= error %>
			</div>
			<% } %>
			<form action="/reset/new/${email}" method="POST" style="width: 100%;">
				<div class="form-group">
					<input type="password" name="reset[password]" placeholder="Enter New Password" class="form-control" required />
				</div>
				<div class="form-group">
					<input type="password" name="reset[confirmPassword]" placeholder="Enter New Password Again" class="form-control" required />
				</div>

				<button type="submit" class="btn btn-block btn-success">
					Update
				</button>
			</form>
		</div>
	</div>
</div>

<%- include("./partials/footer") %>
