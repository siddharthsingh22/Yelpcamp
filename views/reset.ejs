<%- include("./partials/header", {loggedIn : false}) %>

<div class="container">
	<div class="row" style="display: flex; flex-direction: column; align-items: center; margin-top: 80px;">
		<div class="col-sm-8 col-md-4 pr-4 pl-4 pb-4 pt-2" style="border: 1px solid rgba(0, 0, 0, 0.1); background-color: #e4e4e4;">
			<h1 class="display-5 mb-4 text-center" style="font-weight: 100;">Reset Password</h1>

			<form action="/reset" method="POST" style="width: 100%;">
				<div class="form-group">
					<input type="email" name="reset[email]" placeholder="Email Adress" class="form-control" required />
				</div>

				<button type="submit" class="btn btn-block btn-success">
					Send
				</button>
			</form>
		</div>
	</div>
</div>

<%- include("./partials/footer") %>
